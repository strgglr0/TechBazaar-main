# Flask Configuration
FLASK_SECRET=your-secret-key-change-this
FLASK_RUN_PORT=5001
DATABASE_URL=sqlite:///data.db

# Admin Account (optional - will be created on startup if provided)
FLASK_ADMIN_EMAIL=admin@techbazaar.com
FLASK_ADMIN_PASSWORD=admin-password-here

# Email Configuration (Gmail example)
# For Gmail: Enable "App Passwords" in your Google Account settings
# https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=TechBazaar <your-email@gmail.com>

# Alternative: For development/testing with Mailtrap
# MAIL_SERVER=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password

# Alternative: For development with local SMTP server
# MAIL_SERVER=localhost
# MAIL_PORT=1025
# MAIL_USE_TLS=False
# (Run: python -m smtpd -n -c DebuggingServer localhost:1025)

# Frontend Origins (for CORS)
FRONTEND_ORIGINS=http://localhost:3000,https://your-codespace-url.app.github.dev
